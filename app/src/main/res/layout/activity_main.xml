<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button2"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="206dp"
        android:layout_height="54dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="26dp"
        android:text="@string/submit"
        android:background="@color/red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <TextView
        android:id="@+id/top"
        android:layout_width="265dp"
        android:layout_height="100dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="74dp"
        android:text="Your fries \ndeserve better."
        android:textColor="#E61818"
        android:textSize="38dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,SpUsage" />

    <TextView
        android:id="@+id/second"
        android:layout_width="267dp"
        android:layout_height="27dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="26dp"
        android:text="@string/join_tomatoball_now_it_s_free"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/fname2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top"
        tools:ignore="TextSizeCheck,TextSizeCheck" />

    <EditText
        android:id="@+id/fname2"
        android:layout_width="218dp"
        android:layout_height="48dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="26dp"
        android:autofillHints=""
        android:background="@drawable/forhw"
        android:ems="10"
        android:hint="@string/first_name"
        android:inputType="text"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingRight="16dp"
        android:paddingBottom="12dp"
        android:textColorHint="#D32F2F"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/second"
        tools:ignore="TextContrastCheck" />


    <EditText
        android:id="@+id/lname"
        android:layout_width="218dp"
        android:layout_height="49dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/forhw"
        android:ems="10"
        android:hint="@string/last_name"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textColorHint="#D32F2F"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fname2"
        tools:ignore="TextContrastCheck" />


    <EditText
        android:id="@+id/mail"
        android:layout_width="212dp"
        android:layout_height="48dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="35dp"
        android:autofillHints=""
        android:background="@drawable/forhw"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="text"
        android:textColorHint="#D32F2F"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lname"
        tools:ignore="Autofill,TextContrastCheck" />


    <EditText
        android:id="@+id/password"
        android:layout_width="212dp"
        android:layout_height="48dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/forhw"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="text"
        android:textColorHint="#D32F2F"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mail"
        tools:ignore="Autofill,TextContrastCheck,TextFields" />

</androidx.constraintlayout.widget.ConstraintLayout>

